# 告警分析系统环境配置示例
# 复制此文件为 .env 并根据实际情况修改配置

# 基础配置
APP_NAME=告警分析系统
VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=production

# 数据库配置
DATABASE_URL=mysql+aiomysql://username:password@localhost:3306/alarm_system
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10
REDIS_TIMEOUT=5

# 告警收集配置
COLLECTOR_ENABLED=true
COLLECTOR_BATCH_SIZE=100
COLLECTOR_FLUSH_INTERVAL=10
COLLECTOR_MAX_QUEUE_SIZE=10000
COLLECTOR_WORKER_COUNT=4

# 告警分析配置
ANALYZER_ENABLED=true
DUPLICATE_THRESHOLD=0.8
CORRELATION_WINDOW=300
ANALYSIS_BATCH_SIZE=50
ANALYSIS_INTERVAL=30

# 通知配置
NOTIFICATION_ENABLED=true
EMAIL_ENABLED=false
WEBHOOK_ENABLED=false
NOTIFICATION_RETRY_COUNT=3
NOTIFICATION_RETRY_INTERVAL=300
NOTIFICATION_TIMEOUT=30

# 安全配置 - 生产环境请务必修改SECRET_KEY
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=480
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/alarm_system.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# 性能配置
CACHE_TTL=300
API_RATE_LIMIT=1000
WEBSOCKET_MAX_CONNECTIONS=100
BACKGROUND_TASK_INTERVAL=60

# 存储配置
STATIC_FILES_PATH=static
UPLOAD_MAX_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,txt,csv,json